UI::{
    OpenDialog(
	       `VBox(
		     `TextEntry(`id(`test),   `opt(`disabled), "TestEntry", "Disabled"),
		     `PushButton(`id(`change), `opt(`hstretch), "&Change")
		     )
	       );

    boolean enabled = false;
    
    while (UserInput() != `cancel)
    {
	enabled = !enabled;
	ChangeWidget(`id(`test), `Enabled, enabled);
	
	if (enabled) 
	    ChangeWidget(`id(`test), `Value, "Enabled");
	else 
	    ChangeWidget(`id(`test), `Value, "Disabled");
    }
}

