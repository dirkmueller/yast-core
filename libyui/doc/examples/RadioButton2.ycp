    while (true)
    {
	any ret = UI::UserInput();

	if ( ret == `close ) break;
	else if (ret == `next)
	{
	    y2milestone("Hit next");
	    integer current = (integer) UI::QueryWidget(`id(`rb), `CurrentButton);
	    current = (current + 1) % 4;
	    UI::ChangeWidget(`id(`rb), `CurrentButton, current);
	}
	else
	{
	    y2milestone("Hit RadioButton #%1", ret);
	}
