// Example for CheckBoxFrame with inverted check box:
// The frame content becomes active if the check box is off
{
    UI::OpenDialog(
		   `VBox(
			 `MarginBox( 1, 0.5,
				     `CheckBoxFrame (`opt(`invertAutoEnable),  "&Automatic", true,
						      `VBox(
							    `HBox(
								  `TextEntry( "&Server" ),
								  `ComboBox ( "&Mode",
									      [ "Automatic",
										"Manual",
										"Debug" ] )
								  ),
							    `Left( `CheckBox( "&Logging" ) ),
							    `TextEntry( "&Connections" )
							    )
						      )
				     ),
			 `PushButton("&OK")
			 )
		   );
    UI::UserInput();
    UI::CloseDialog();
}
