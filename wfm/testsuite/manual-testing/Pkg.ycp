{
    // Pkg::DoProvide (list tags) -> $["failed1":"reason", ...]
    map fails = Pkg::DoProvide (["a", "b"]);
    if (fails == 0)
	return 1;
    if (size (fails) > 0)
	return 2;
    return 0;
}

{
    // Pkg::DoRemove (list tags) -> $["failed1":"reason", ...]
    map fails = Pkg::DoRemove (["a", "b"]);
    if (fails == 0)
	return 1;
    if (size (fails) > 0)
	return 2;
    return 0;
}

{
    // Pkg::GetGroups("") -> ["group1", "group2", ...]

    list groups = Pkg::GetGroups("");
    if (groups == nil)
	return 1;
    if (size (groups) <= 0)
	return 2;
    return 0;
}

