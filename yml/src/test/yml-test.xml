    <OpenDialog>
        <opt><defaultsize /></opt>

        <VBox>
            <VCenter>
                <HSquash>
                <VBox>
                    <Left>
                        <CheckBox>
                            <![CDATA[short]]>
                        </CheckBox>
                    </Left>
                    <Left>
                        <CheckBox>
                            <![CDATA[longer]]>
                        </CheckBox>
                    </Left>
                    <Left>
                        <CheckBox>
                            <![CDATA[even longer]]>
                        </CheckBox>
                    </Left>
                    <Left>
                        <CheckBox>
                            <![CDATA[yet even longer]]>
                        </CheckBox>
                    </Left>
                </VBox>
            </HSquash>
            </VCenter>

            <Left>
                <PushButton>
                    <![CDATA[bottom left]]>
                </PushButton>
                <PushButton>
                    <![CDATA[bottom middle]]>
                </PushButton>
                <PushButton>
                    <![CDATA[bottom right]]>
